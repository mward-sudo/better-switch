{
  "name": "@scripthungry/better-switch",
  "version": "1.0.5",
  "description": "A simple alternative to the switch statement for matching strings and returning values",
  "main": "./dist/index.js",
  "type": "module",
  "scripts": {
    "build": "webpack",
    "start": "webpack-dev-server --mode development",
    "watch": "webpack --watch",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mward-sudo/better-switch.git"
  },
  "keywords": [
    "switch"
  ],
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mward-sudo/better-switch/issues"
  },
  "homepage": "https://github.com/mward-sudo/better-switch#readme",
  "devDependencies": {
    "@swc/cli": "^0.1.55",
    "@swc/core": "^1.2.141",
    "@types/jest": "^27.4.0",
    "chokidar": "^3.5.3",
    "jest": "^27.5.1",
    "swc-loader": "^0.1.15",
    "ts-jest": "^27.1.3",
    "ts-loader": "^9.2.6",
    "typescript": "^4.5.5",
    "webpack": "^5.69.1",
    "webpack-cli": "^4.9.2",
    "webpack-dev-server": "^4.7.4",
    "webpack-stats-plugin": "^1.0.3",
    "xo": "^0.48.0"
  },
  "xo": {
    "space": true,
    "semicolon": false,
    "rules": {
      "import/extensions": [
        "error",
        "ignorePackages",
        {
          "js": "never",
          "jsx": "never",
          "ts": "never",
          "tsx": "never"
         }
      ]
    }
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "public"
  }
}
